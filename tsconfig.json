{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ES6",
    "baseUrl": ".",
    "module":"CommonJS", 
    "paths": {
      "@/*": ["./src/*"],
    },
    "lib": [
      "dom",
      "es2017"
  ],
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["/src"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowJs": true,
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
  ]
}